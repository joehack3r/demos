                }
            }
        },
        {
            "VPC-Demo-SshBastionHost" : {
                "Properties" : {
                    "Template" : "file:~/demos/20160208/templates/vpc_ssh_bastion_host.json",
                    "AddOutputsToParameters" : true,
                    "Capabilities" : ["CAPABILITY_IAM"]
                }
            }
        },
        {
            "Jenkins-Demo" : {
                "Properties" : {
                    "Template" : "file:~/demos/20160208/templates/jenkins.json",
                    "AddOutputsToParameters" : true,
                    "Capabilities" : ["CAPABILITY_IAM"]
                }
            }
        }
    ]
